{
    "name": "aurora",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "lint:ci": "turbo run lint -- --max-warnings=0",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "clean": "turbo run clean",
        "type-check": "turbo run type-check",
        "test": "turbo run test",
        "prepare": "husky"
    },
    "devDependencies": {
        "@eslint/js": "^9",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.0",
        "eslint-plugin-prettier": "^5",
        "eslint-plugin-simple-import-sort": "^12",
        "globals": "^15",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.2",
        "prettier": "^3",
        "turbo": "^2.5.6",
        "typescript": "^5.6",
        "typescript-eslint": "^8"
    },
    "overrides": {
        "eslint": "^9.34.0",
        "@typescript-eslint/*": "^8"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx,css,scss,md,json}": [
            "prettier --write"
        ]
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "packageManager": "npm@10.0.0"
}
